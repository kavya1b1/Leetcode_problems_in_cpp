class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        long int sum = 0;
        long maxi = LONG_MIN;
        for (int i = 0; i < nums.size(); i++) {
            sum = sum + nums[i];
            maxi = max(sum, maxi);
            if (sum < 0) { sum = 0; }
        }

        return maxi;
    }
};
